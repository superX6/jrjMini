page{
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  font-size: 10pt;
  line-height: 150%;
  min-height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  background:url('https://www.jrjzx.cn/p2pmini/statics/build/img/star/share_bg.png') #f0f0f0 no-repeat;
  background-size: contain; 
}

.container {
  width: 92%;
  position: relative;
  /* background: #6eb0ea;     */
  box-sizing: border-box;
   background: transparent; 
  margin: 0 4%; 
  height: 100%;
  overflow: hidden;
} 
.panel{
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  padding: 20rpx 20rpx;  
  border-radius: 30rpx;
  margin: 20rpx auto;
}
.container .user-info{
  height: 200rpx;
  background: #fff;
  margin-top: 145rpx;
  display: flex;
}
.container .user-info .info-text{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  line-height: 56rpx;
  width: 50%;
  font-size: 27rpx;
  font-weight: blod;
  flex: 1;
}


.container .user-info .info-text text{
  color: #fc6e00;
  margin-left: 10rpx;
  font-weight: bold;
}
.container .user-info .info-text view{
  flex-basis: 50%;
}
.container .user-info .info-text progress{
  margin-top: 15rpx;
  flex-basis: 85%;
}
.container .user-info image{
  display: inline-block;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  flex-basis: 160rpx;
  margin-right: 20rpx;
 
}
.share{
  overflow: hidden;  
  margin-top: 20rpx;
}
.share .title{
  padding: 10rpx 0 20rpx;
  text-align: center;
  font-size: 34rpx;
  line-height: 34rpx;
  font-weight: bold;  
}
.share image{
  display: block;
  text-align: center;
  margin: 0 auto;
  width: 260rpx;
  height: 260rpx;
  border-radius: 50%;
}
.share button{
  width: 80%;
  margin: 20rpx auto;
  border-radius: 20rpx;
}
 .friends{   
  height: 168rpx; 
  padding: 10rpx;
  margin-top: 35rpx;
  overflow: hidden;
}

 .friends image{
  display: inline-block;
  width: 65rpx;
  height: 65rpx; 
  border-radius: 50%;
  margin-left: 3rpx; 
  margin-top: -10rpx;
  margin-bottom: 14rpx; 
}

.share .want-play{
  background: #fc8200;
}
.title-wrapper{
  display: flex;
  line-height: 18rpx;
}
.title-wrapper .line{
  flex: 1;
  height: 10rpx;
  line-height: 10rpx;
  border-top: 1rpx solid #ccc;
  box-sizing: border-box;
  padding: 20rpx;
}
.title-wrapper .title2{
  padding: 0 20rpx;
  position: relative;
  top: 0rpx;
  z-index: 99;
}