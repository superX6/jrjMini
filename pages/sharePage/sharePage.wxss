page{
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  font-size: 10pt;
  line-height: 150%;
  min-height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  background:url('https://uat.jrjzx.cn/p2pmini/statics/build/img/star/banner.png') #f0f0f0 no-repeat;
  background-size: contain;
}

.container {
  width: 92%;
  position: relative;
  /* background: #6eb0ea;     */
  box-sizing: border-box;
   background: transparent; 
  margin: 0 4%; 
  height: 100%;
  overflow: hidden;
} 
.panel{
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  padding: 20rpx 20rpx;  
  border-radius: 30rpx;
  margin: 20rpx auto;
}
.container .user-info{
  height: 200rpx;
  background: #fff;
  margin-top: 230rpx;
  display: flex;
}
.container .user-info .info-text{
    line-height: 56rpx;
    width: 50%;
  font-size: 30rpx;
  font-weight: blod;
}
.container .user-info .info-text progress{
  margin-top: 15rpx;
}
.container .user-info image{
  display: inline-block;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  flex-basis: 160rpx;
  margin-right: 20rpx;
 
}
.share{
  overflow: hidden;  
  margin-top: 20rpx;
}
.share .title{
  padding: 10rpx 0 20rpx;
  text-align: center;
  font-size: 34rpx;
  line-height: 34rpx;
  font-weight: bold;  
}
.share image{
  display: block;
  text-align: center;
  margin: 0 auto;
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
}
.share button{
  width: 90%;
  margin: 20rpx auto;
  border-radius: 20rpx;
}
 .friends{   
  height: 100rpx; 
  padding: 10rpx;
  margin-top: 20rpx;
}

 .friends image{
  display: inline-block;
  width: 60rpx;
  height: 60rpx; 
  border-radius: 50%;
  margin-left: 10rpx; 
}

.share .want-play{
  background: #fc8200;
}
.title-wrapper{
  display: flex;
}
.title-wrapper .line{
  flex: 1;
  border-top: 1rpx solid #ccc;
  box-sizing: border-box;
  padding: 20rpx;
}
.title-wrapper .title2{
  padding: 0 20rpx;
  position: relative;
  top: -20rpx;
  z-index: 99;
}